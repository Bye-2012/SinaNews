<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layout_content"
        >

    <!-- 上方 -->
    <LinearLayout
            android:id="@+id/content_top"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            >

        <ImageView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:src="@drawable/back_icon"
                android:onClick="clickIcon"
                android:id="@+id/txt_cot_backIcon"
                />

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                >

        </LinearLayout>

        <ImageView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:src="@drawable/collect"
                android:onClick="clickIcon"
                android:id="@+id/txt_cot_collectIcon"
                />

        <ImageView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:src="@drawable/share"
                android:onClick="clickIcon"
                android:id="@+id/txt_cot_shareIcon"
                />
    </LinearLayout>

    <!-- 下方 -->
    <LinearLayout
            android:orientation="vertical"
            android:id="@+id/content_bottom"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            >

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/line"
                />

        <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                >

            <EditText
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="wrap_content"
                    android:hint="我来说两句..."
                    />

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                <TextView
                        android:id="@+id/txt_cot_cmtCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="count"
                        android:gravity="center"
                        android:textSize="16sp"
                        />

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:src="@drawable/comment_count"
                        />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!-- 中间 -->
    <LinearLayout
            android:id="@+id/content_txt_pic_fragment"
            android:layout_below="@id/content_top"
            android:layout_above="@id/content_bottom"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                <ImageView
                        android:id="@+id/txt_cot_img"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/logo"
                        android:scaleType="fitXY"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        />

                <TextView
                        android:id="@+id/txt_cot_cretime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="create_time"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:layout_marginLeft="15dp"
                        />

                <TextView
                        android:id="@+id/txt_cot_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="title"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        />

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/line"
                        />

                <TextView
                        android:id="@+id/txt_cot_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="content"
                        android:textSize="20sp"
                        android:padding="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        />

                <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="#00F"
                            android:text="关键字1"
                            android:gravity="center"
                            />

                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="#00F"
                            android:text="关键字2"
                            android:gravity="center"
                            />

                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="#00F"
                            android:text="关键字3"
                            android:gravity="center"
                            />

                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="#00F"
                            android:text="关键字4"
                            android:gravity="center"
                            />
                </LinearLayout>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="热门评论"
                        android:textSize="20sp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="30dp"
                        />

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/line"
                        />

                <ListView
                        android:id="@+id/listView_cnt_comment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        />

                <TextView
                        android:id="@+id/txt_cot_emptyinfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="暂无评论"
                        android:padding="10dp"
                        android:layout_marginLeft="8dp"
                        />

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/line"
                        />

                <TextView
                        android:id="@+id/txt_cot_moreCmt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="查看更多评论"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:padding="5dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="#F00"
                        android:clickable="true"
                        android:onClick="getMoreComments"
                        />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</RelativeLayout>