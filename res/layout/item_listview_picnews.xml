<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/layout_picall"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <LinearLayout
                android:id="@+id/layout_pic12"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
            <ImageView
                    android:id="@+id/img_pic_1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic_default"
                    android:padding="5dp"
                    />

            <ImageView
                    android:id="@+id/img_pic_2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic_default"
                    android:padding="5dp"
                    />

        </LinearLayout>
        <LinearLayout
                android:id="@+id/layout_pic34"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
            <ImageView
                    android:id="@+id/img_pic_3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic_default"
                    android:padding="5dp"
                    />
            <ImageView
                    android:id="@+id/img_pic_4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic_default"
                    android:padding="5dp"
                    />
        </LinearLayout>
    </LinearLayout>

    <TextView
            android:id="@+id/txt_pic_title"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title"
            android:textColor="#000"
            android:textSize="20sp"
            />
    <TextView
            android:id="@+id/txt_pic_descript"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="descript"
            android:textColor="#000"
            android:textSize="15sp"
            />

</LinearLayout>